@using SurveyProject.Models.DTOs;


@model List<AssignmentDTO>
@{
    ViewData["Title"] = "Home Page";
}
<body>


@foreach (var item in Model)
{
    <div class="card col-md-4">
        <div class="card-body">
            <div class="card-title">@item.Survey.Title</div>
            
            @if (item.Status == 1)
            {
                <a>Anket cevaplandı!</a>
            }
            else
            {
                <a class="btn btn-primary" href="/SolutionController1/Index/@item.AssignmentUserId">Başla</a>
            }
        </div>
    </div>
}
</body>

