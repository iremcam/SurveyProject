@model List<Survey>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Survey";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container mt-3">
 

       
        <table class="table">
            <thead class="table-success">
                <tr>
                    <th>Anket İsmi</th>
                    <th>Sorular</th>
                    <th>Soru Ekle</th>
                    <th>Atama</th>
                    <th>Yanıtlar</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td><a href="/Question/Index/@item.Id">Sorular</a></td>
                        <td><a href="/Question/QuestionCreate/@item.Id">SoruEkle</a></td>
                        <td><a href="/Assignment/AssignmentCreate/@item.Id">Ata</a></td>
                        <td><a href="/Survey/SurveyAnswers/@item.Id">Yanıtları Gör</a></td>
                    </tr>
                }
               
               
            </tbody>
        </table>
    </div>

</body>
</html>
